<!-- Go through each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
        {{!-- <a href="/post/{{post.id}}">{{post.title}}</a> --}}

       {{#if logged_in}}
       <a href="/post/{{post.id}}">{{post.title}}</a>
       {{else}}
       <h2>{{post.title}}</h2>
       {{/if}}
       

    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
