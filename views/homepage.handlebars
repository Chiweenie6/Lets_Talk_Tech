<h1 class="fs-1 text-success text-center" style="font-size: 50px; font-weight:bolder">Tech Topics</h1>

<!-- Loop over each Post in the Posts array and display each Post -->
{{#each posts as |post|}}
  <div
    class="row d-flex justify-content-center"
    style="background-image: url(''); background-repeat:no-repeat; background-size: 100%"
  >
    <div
      class="post d-flex flex-column w-50 mt-5 p-5 border border-3 border-dark rounded-pill"
    >
      <div class="align-self-center">
        <h2>
          <a
            href="/posts/{{post.id}}"
            class="hvr-curl-top-right fs-2"
          >{{post.title}}</a>
        </h2>
      </div>
      <div class="align-self-center container">
        <img
          src="{{post.image}}"
          class="rounded mx-auto d-block"
          style="max-width: 25%"
          alt="post-image"
        />
      </div>
      <div class="align-self-center">
        <h5 class="fs-6">Created on
          {{format_date post.date_created}}</h5>
      </div>
    </div>
  </div>
  <br />
{{/each}}
