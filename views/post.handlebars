{{! Display for an individual post with comments }}
<div
  class="row d-flex justify-content-center py-5"
  style="background-image: url(''); background-repeat:no-repeat; background-size:cover;"
>
  <div class="post d-flex flex-column m-5 w-50">
    <div class="align-self-center container">
      <img
        src="{{image}}"
        class="rounded mx-auto d-block"
        style="max-width: 50%"
        alt="post-image"
      />
    </div>
    <div class="align-self-center">
      <h1 class="text-success fs-1">{{title}}</h1>
    </div>
    <div class="align-self-center">
      <br />
      <p class="text-justify fs-6">
        {{content}}
      </p>
    </div>
    <div>
      <h6>Created by {{user.username}} on {{format_date date_created}}</h6>
    </div>

    <br />
    <div class="align-self-center">
      <p>
        <a href="/posts/{{id}}/addComment" class="btn btn-success">Add a comment</a>
      </p>
    </div>
    <br />

    <Div>
      <h1>Comments:</h1>
    </Div>
    <!-- Loop over each comment in the comments array and display each comment for the individual post -->
    {{#each comments as |comment|}}
      <div class="row d-flex justify-content-center border rounded mb-3">
        <div class="post d-flex flex-column mb-3 w-50">
          <div class="align-self-center">
            <h4 class="fs-5">{{comment.opinion}}</h4>
          </div>
        </div>
        <div>
          <h6 class="fs-6 text-end">-{{user.username}}</h6>
        </div>
      </div>
    {{/each}}
  </div>
</div>
