{{! Display for an individual post with comments }}
<div
  class="row d-flex justify-content-center py-5"
  style="background-image: url(''); background-repeat:no-repeat; background-size:cover;"
>
  <div class="post container d-flex flex-column m-5 w-50">
    <div class="border border-dark border-3 p-5">
    <div class="pb-5">
    <div class="align-self-center">
      <h1 class="text-success fs-1 text-center">{{title}}</h1>
    </div>
    <div class="align-self-center container">
      <img
        src="{{image}}"
        class="rounded mx-auto d-block"
        style="max-width: 20%"
        alt="post-image"
      />
    </div>
    <div class="align-self-center">
      <br />
      <p class="text-justify fs-5">
        {{content}}
      </p>
    </div>
    <div class="text-end">
      <h6 class="fs-6">Created by {{user.username}} on {{format_date date_created}}</h6>
    </div>
    </div>
    </div>

    <br />
    <div class="align-self-center mt-5">
      <p>
        <a href="/posts/{{id}}/addComment" class="btn btn-primary">Add a Comment</a>
      </p>
    </div>
    <br />
  

    <Div>
      <h1 class="fs-4">Comments:</h1>
    </Div>
    <!-- Loop over each comment in the comments array and display each comment for the individual post -->
    {{#each comments as |comment|}}
      <div class="row d-flex justify-content-center border rounded mb-3 pt-2">
        <div class="post d-flex flex-column mb-3 w-50">
          <div class="align-self-center">
            <h4 class="fs-5">{{comment.opinion}}</h4>
          </div>
        </div>
        <div>
          <h6 class="fs-6 text-end">-{{user.username}}</h6>
        </div>
      </div>
    {{/each}}
  </div>
</div>
