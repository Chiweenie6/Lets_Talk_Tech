{{!-- Form for adding new comment to post --}}
<div>
  <div class="row d-flex justify-content-center">
    <div class="post d-flex flex-column mb-3 w-50">
      <div class="align-self-center">
        <h2 class="text-center text-success fs-1">{{title}}</h2>
      </div>
    </div>
  </div>

<div class="d-flex justify-content-center">
  <form id="new-comment-form" class="form d-flex w-50">
    <div class="card-body">
      <input type="hidden" name="post_id" value="{{id}}" />

      {{!-- <label class="form-label" style="font-weight: bold;" for="comment-opinion">Add New Comment</label> --}}

      <div class="form-group">
        <label for="comment-opinion" style="font-weight: bold;" for="comment-opinion">Comment:</label>
        <textarea class="form-input" type="text" id="comment-opinion" name="comment-opinion"/></textarea>
      </div>

    <div class="form-group d-flex justify-content-center">
      <button id="comment-save" type="submit" class="btn btn-primary">Add
        Comment</button>
        </div>
    </div>
  </form>
  </div>
</div>