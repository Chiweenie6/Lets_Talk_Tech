<div class="container">
  <h2>Update Post</h2>
<form id="update-post">
  <div class="field">
    <div class="field">
      <input type="hidden" id="post-id" value="{{post.id}}"/>
      <label class="label post-title" for="post-title">Title</label>
      <div class="control">
        <input type="text" class="form-input" id="post-title" value="{{post.title}}"/>
      </div>
    </div>
        <div class="field">
      <label class="label post-content">Content</label>
      <div class="control">
        <textarea class="form-input" id="post-content" value=""/>{{post.content}}</textarea>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="buttons">
      <button type="submit" class=" button is-medium is-success">Save Changes</button>
      <a href="/profile" class="button is-medium is-danger">Cancel</a>
    </div>
  </div>
</form>
</div>